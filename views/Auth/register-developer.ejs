<%- include('includes/head.ejs') %>

  <body class="hold-transition layout-top-nav register-page">
    <div class="wrapper">
    <div class="register-box">
      <div class="register-logo">
        <a href="#"><b>ሀገርኛ</b>AppStore</a>
      </div>

      <div class="card">
        <div class="card-body register-card-body">
            <% if (errorMessage) { %>
          <div class="user-message user-message--error">
          <%= errorMessage %>
          </div>
          <% } %>
           <div class="widget-user-image elevation-2">
              <img
                class="img-circle"
                src="img/avatar3.png"
                alt="User Avatar"
              />
           <span> <label style="color:black;">Developer Console</label> </span>
            </div>
          <p class="login-box-msg"></p>

          <form action="/signup.developer" method="post">
            <div class="input-group mb-3">
              <input
                type="text"
                name="fullName"
                class="form-control"
                placeholder="Full name"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-user"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <input
                type="email"
                name="email"
                class="form-control"
                placeholder="Email"
                required
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-envelope"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <input
                type="number"
                class="form-control"
                placeholder="Phone Number"
                name="phoneNumber"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-phone"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <input
                type="text"
                class="form-control"
                placeholder="Company Name"
                name="companyName"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-company"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <input
                type="text"
                name="city"
                class="form-control"
                placeholder="City"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-city"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <select
                   class="form-control select2"
                   style="width: 100%"
                   name="developerType">
         <% if(developerType.length > 0) { %> <% for(let developer of developerType ) { %>
              <option value="<%= developer.type %>"><%= developer.type %></option>
         <% } %><% } %>
                </select>
            </div>
            <div class="input-group mb-3">
              <input
                type="password"
                class="form-control"
                placeholder="Password"
                name="password"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-lock"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <input
                type="password"
                class="form-control"
                placeholder="Retype password"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-lock"></span>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-8">
                <div>
                  <input
                    type="checkbox"
                    name="terms"
                    value="agree"
                    id="termsBox"
                  />
                  <label for="agreeTerms">
                    I agree to the <a href="#">terms</a>
                  </label>
                </div>
              </div>
              <!-- /.col -->
              <div class="col-12">
                <button type="submit" id="registerBtnID" class="btn btn-primary btn-block">
                  Register
                </button>
              </div>
            </div>
          </form>
          <a href="/login" class="text-center">I already have a account</a>
        </div>
      </div>
     </div>
    </div>
  <%- include('includes/footer.ejs') %>
  </body>
    <script>
   $('#registerBtnID').attr("disabled",true);  //Initially disabled button when document loaded.
    $('#termsBox').click(function(){
      $('#registerBtnID').attr("disabled",!$(this).is(":checked"));   
    })
  </script>
</html>
