            <a class="dropdown-item" href="#">
              <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
              Profile
            </a>

            <div class="dropdown-divider"></div>
            <a href="/Logout" class="dropdown-item">
              <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
              Logout
            </a>
          </div>
        </li>
       
      </ul>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
      <a href="#" class="brand-link">
        <span class="brand-text font-weight-light">Developer</span>
      </a>

      <!-- Sidebar -->
      <%- include('includes/sidenav.ejs') %>
      <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h3>APK General Detail</h3>
            </div>
          </div>
        </div>
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <form
                action="/upload.apk"
                method="POST"
                enctype="multipart/form-data"
              >
                <div class="form-group row" style="margin-left: 900px">
                  <h5>Select App</h5>
                  <div class="col-md-7">
                    <select
                      class="form-control select2"
                      style="width: 100%"
                      name="App_ID"
                    >
                      <% if(Apps.length > 0) { %> <% for(let App of Apps ) { %>
                      <option value="<%= App.appID %>">
                        <%= App.appName %>
                      </option>
                      <% } %><% } %>
                    </select>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="card card-info card-outline">
                    <div class="card-header">
                      <h3 class="card-title">App APK Detail</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                      <div class="form-group row">
                        <label
                          for="my-awesome-dropzone"
                          class="col-sm-2 col-form-label"
                          >Upload APK File</label
                        >
                        <div class="col-md-8">
                          <input
                            type="file"
                            name="apkFile"
                            accept="application/*"
                            class="form-control dropzone"
                            id="my-awesome-dropzone"
                          />
                          <small for="appname"
                            >upload your apk file here.
                          </small> 
                        </div>
                      </div>
                      <div class="form-group row">
                        <label for="packageName" class="col-sm-2 col-form-label"
                          >Enter Package Name</label
                        >
                        <div class="col-md-8">
                          <input
                            type="text"
                            name="packageName"
                            size="50"
                            class="form-control"
                            id="packageName"
                          />
                          <small for="packageName"
                            >This is your app package name on store it should be
                            unique.
                          </small>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label for="appVersion" class="col-sm-2 col-form-label"
                          >App Version</label
                        >
                        <div class="col-md-8">
                          <input
                            type="text"
                            name="appVersion"
                            size="50"
                            class="form-control"
                            id="appVersion"
                            placeholder="V1.0"
                          />
                        </div>
                      </div>
                      <div class="form-group row">
                        <label for="api" class="col-sm-2 col-form-label"
                          >App API Requirement</label
                        >
                        <div class="col-md-8">
                          <select
                            class="form-control select2"
                            style="width: 100%"
                            name="api"
                          >
                            <% if(androidAPIs.length > 0) { %> <% for(let
                            androidAPI of androidAPIs ) { %>
                            <option value="<%= androidAPI.codeName %>">
                              <%= androidAPI.codeName %> <%=
                              androidAPI.API_Level %>
                            </option>
                            <% } %><% } %>
                          </select>
                        </div>
                      </div>
                      <div class="float-right">
                        <button type="submit" class="btn btn-info">
                          Create
                        </button>
                      </div>

                      <!-- /.card-footer -->
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer"></div>
                    <!-- /.card-footer -->
                  </div>
                  <!-- /.card -->
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%- include('includes/footer.ejs') %>
  </div>
</body>
