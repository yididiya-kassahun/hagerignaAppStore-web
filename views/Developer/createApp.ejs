    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
      <a href="#" class="brand-link">
        <span class="brand-text font-weight-light">Developer</span>
      </a>

      <!-- Sidebar -->
      <%- include('includes/sidenav.ejs') %>
      <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
               <div class="col-12">
            <div class="callout callout-info">
              <h3><i class="fas fa-info"></i> Create New App</h3>
              Below Create New Amazing Apps and Publish it to Our App Market Place! Have a Nice Journey
            </div>
            </div>
        </div>
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
             <div class="col-md-12">
            <div class="card card-info card-outline">
              <div class="card-header">
                <h3 class="card-title">App Detail</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
              <form action="/create.app" method="POST" class="form-horizontal">
                  <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">App Name</label>
                    <div class="col-md-8">
                      <input type="text" size="50" max="50" name="AppName" class="form-control" id="appname" required>
                      <small for="appname">This is how your app appear on store it should be neat short and not
                        include reptitive symbols, text, price or Emoji. 0/50
                      </small>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="lang" class="col-sm-2 col-form-label">Default Language</label>
                    <div class="col-md-8">
                        <select
                          class="form-control select2"
                          style="width: 100%"
                          name="Language"
                        >
                      <% if(languages.length > 0) { %> <% for(let language of languages ) { %>
                          <option value="<%= language.language %>"><%= language.language %></option>
                        <% } %><% } %>
                        </select>
                    </div>
                  </div>
                   <div class="form-group row">
                    <label for="ApporGame" class="col-sm-2 col-form-label">App or Game</label>
                    <div class="col-sm-5">
                      <fieldset class="form-control" id="group-1">
                      <label for="app">App</label> <input type="radio" value="App" name="ApporGame" class="col-sm-2" id="app">
                       <label for="game">Game</label><input type="radio" value="Game" name="ApporGame" class="col-sm-2" id="game">
                      </fieldset>
                      </div>
                  </div>
                   <div class="form-group row">
                    <label for="free_paid" class="col-sm-2 col-form-label">Free or Paid</label>
                     <div class="col-sm-5">
                       <fieldset class="form-control" id="group-2">
                      <label for="free">Free</label> <input type="radio" value="Free" name="free_paid" class="col-sm-2" id="free">
                       <label for="paid">Paid</label><input type="radio" value="Paid" name="free_paid" class="col-sm-2" id="paid">
                       </fieldset>
                      </div>
                  </div>
                  <br><br>
                  <h3>Declaration</h3>
                  <hr>
                   <div class="row">
                    <label for="policies" class="col-sm-2 col-form-label">Developer program policies</label>
                     <div class="col-sm-5 row">
                     <input type="checkbox" class="row" id="policies"> <p>Confrim that your app meets the Developer
                       program and policies. please read the developer program policies. if your app store listing is eligible 
                       to appear on playstore you can contact review team.
                     </p>
                    </div>
                  </div>
                      <div class="row">
                    <label for="Regulation" class="col-sm-2 col-form-label">Ethiopian Tax Regulation</label>
                     <div class="col-sm-5 row">
                     <input type="checkbox" id="Regulation"> <p>Confrim that your app meets the Developer
                       program and policies. please read the developer program policies. if your app store listing is eligible 
                       to appear on playstore you can contact review team.
                     </p>
                    </div>
                  </div>
                  <div class="float-right">
                  <button type="submit" class="btn btn-info">Create</button> | 
                  <!-- <button class="btn btn-primary">Next</button> -->
                </div>
                </form>
                <!-- /.card-footer -->
              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                
              </div>
              <!-- /.card-footer -->
            </div>
            <!-- /.card -->
          </div>
          </div>
        </div>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%- include('includes/footer.ejs') %>
  </div>
</body>
