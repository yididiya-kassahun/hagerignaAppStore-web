    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
      <a href="#" class="brand-link">
        <span class="brand-text font-weight-light">Developer</span>
      </a>

      <!-- Sidebar -->
      <%- include('includes/sidenav.ejs') %>
      <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h3>Questionaries Dashboard</h3>
            </div>
          </div>
        </div>
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <form action="/post.questionary" method="POST">
                <div class="form-group row" style="margin-left: 900px">
                  <h5>Select App</h5>
                  <div class="col-md-7">
                    <select
                      class="form-control select2"
                      style="width: 100%"
                      name="AppID"
                    >
                      <% if(Apps.length > 0) { %> <% for(let App of Apps ) { %>
                      <option value="<%= App.appID %>">
                        <%= App.appName %>
                      </option>
                      <% } %><% } %>
                    </select>
                  </div>
                </div>
                <div
                  class="card card-primary card-outline"
                  style="margin-top: 10px"
                >
                  <div class="card-header">
                    <div class="card-body w-100">
                      <% if(questions.length > 0) { %> <% for(let question of
                      questions ) { %>
                      <h4><%= question.id %>. <%= question.question %></h4>
                      <input
                        type="hidden"
                        value="<%= question.id %>"
                        name="questionID"
                        class="form-control"
                      />
                      <div class="col-md-12">
                        <select
                          class="form-control select2"
                          style="width: 100%"
                          name="yesORno"
                        >
                          <option value="1">Yes, I Agree</option>
                          <option value="0">No, i didn't Agree</option>
                        </select>
                      </div>

                      <hr />
                      <% } %> <% } %>
                    </div>
                    <button
                      formaction="/post.questionary"
                      style="float: right"
                      type="submit"
                      class="btn btn-default"
                    >
                      Submit
                    </button>
                  </div>
                </div>
                <div style="float: right;">
                  <button class="btn btn-primary">Release and Rollout</button>
                </div>
              </form>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-5"></div>
          </div>
        </div>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%- include('includes/footer.ejs') %>
  </div>
</body>
