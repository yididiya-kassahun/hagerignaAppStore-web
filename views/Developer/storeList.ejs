                <h3 class="card-title">App Detail</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
              <form class="form-horizontal">
                  <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">App Name</label>
                    <div class="col-md-8">
                      <input type="text" size="50" class="form-control" id="appname">
