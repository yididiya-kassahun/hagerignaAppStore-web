<%-include('includes/head.ejs') %>

<body class="hold-transition sidebar-mini layout-fixed">
  <!-- Site wrapper -->
  <div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
      <!-- Left navbar links -->
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" data-widget="pushmenu" href="#" role="button"
            ><i class="fas fa-bars"></i
          ></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
          <a href="#" class="nav-link">Home</a>
        </li>
      </ul>

      <!-- Right navbar links -->
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a
            class="nav-link"
            data-widget="control-sidebar"
            data-slide="true"
            href="#"
            role="button"
          >
            <i class="fas fa-th-large"></i>
          </a>
        </li>
      </ul>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
      <a href="#" class="brand-link">
        <span class="brand-text font-weight-light">ሀገርኛ Appstore | Reviewer</span>
      </a>

      <!-- Sidebar -->
      <%- include('includes/sidenav.ejs') %>
      <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h5>Reviewer Dashboard</h5>
            </div>
          </div>
          <div class="row" style="margin-left: 20%">
            <div class="col-md-4 col-sm-6 col-12">
              <div class="info-box">
                <span class="info-box-icon bg-warning"
                  ><i class="far fa-copy"></i
                ></span>

                <div class="info-box-content">
                  <span class="info-box-text">Total approved Apps</span>
                  <span class="info-box-number">13</span>
                </div>
                <!-- /.info-box-content -->
              </div>
              <!-- /.info-box -->
            </div>
            <div class="col-md-4 col-sm-6 col-12">
              <div class="info-box">
                <span class="info-box-icon bg-warning"
                  ><i class="far fa-flag"></i
                ></span>

                <div class="info-box-content">
                  <span class="info-box-text">Total Rejected Apps</span>
                  <span class="info-box-number">3</span>
                </div>
                <!-- /.info-box-content -->
              </div>
              <!-- /.info-box -->
            </div>
          </div>
        </div>
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <!-- card -->
              <div class="card">
                <div class="card-body">
                  <div class="card-body p-0">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th style="width: 10px">#</th>
                          <th>App Name</th>
                          <th>Status</th>
                          <th>Rolled out At</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <% if(allApps.length > 0) { %> <% for(let app of
                          allApps ) { %>
                          <td>1</td>
                          <td>
                            <img
                              src="<%= app.appIcon %>"
                              width="50px"
                              height="50px"
                            />
                            <%= app.appName %>
                          </td>
                          <td><%= app.appStatus %></td>
                          <td>
                            <%= moment(app.createdAt).format('Do MMMM, YYYY');
                            %>
                          </td>
                          <td>
                            <a
                              href="/reviewApp/<%= app.appID %>"
                              class="btn btn-info"
                              >Review</a
                            >
                          </td>
                        </tr>
                        <% } %><% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <!-- /.card -->
            </div>
          </div>
        </div>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%- include('includes/footer.ejs') %>
  </div>
</body>
