<%-include('includes/head.ejs') %>

<body class="hold-transition sidebar-mini layout-fixed">
  <!-- Site wrapper -->
  <div class="wrapper">
    <!-- Navbar -->
    <%- include('includes/navbar.ejs') %>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
      <a href="#" class="brand-link">
        <span class="brand-text font-weight-light">Super Admin</span>
      </a>

      <!-- Sidebar -->
      <%- include('includes/sidenav.ejs') %>
      <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <section class="content-header">
        <div class="container-fluid">
          <%- include('includes/topData.ejs') %>
          <div class="row mb-2">
            <div class="col-sm-6">
              <h3>List Of Users</h3>
            </div>
          </div>
        </div>
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-body table-responsive p-0">
                  <table class="table table-striped table-valign-middle">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>City</th>
                        <th>Job</th>
                        <th>Age</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if(users.length > 0) { %> <% for(let user of users ) {
                      %>

                      <tr>
                        <td><%= user.id %></td>
                        <td><%= user.fullName %></td>
                        <td><%= user.email %></td>
                        <td><%= user.city %></td>
                        <td><%= user.jobType %></td>
                        <td><%= user.age %></td>
                        <td>
                          <% if(user.isDeactivated === false) {%>
                          <div>
                            <form
                              action="/userAccount/<%= user.id %>?deactivated=true"
                              method="POST"
                            >
                              <button
                                class="btn btn-primary"
                                title="Activate user"
                                type="submit"
                              >
                                <i class="fa fa-user"></i>
                              </button>
                            </form>

                            <% }else{ %>
                            <form
                              action="/userAccount/<%= user.id %>?deactivated=false"
                              method="POST"
                            >
                              <button
                                class="btn btn-primary"
                                title="Deactivate user"
                                type="submit"
                              >
                                <i class="fa fa-user-alt-slash"></i>
                              </button>
                            </form>
                            <% } %>
                            <button class="btn btn-danger">
                              <i class="fa fa-trash"></i>
                            </button>
                          </div>
                        </td>
                      </tr>
                      <% } %> <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%- include('includes/footer.ejs') %>
  </div>
</body>
