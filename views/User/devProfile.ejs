<%-include('includes/head.ejs') %>

<body class="hold-transition sidebar-mini layout-fixed">
  <!-- Site wrapper -->
  <div class="wrapper">
    <!-- Navbar -->
     <%- include('includes/navbar.ejs') %>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar elevation-1">
      <a href="#" class="brand-link">
        <span
          class="brand-text font-weight-light"
          style="color: burlywood; font-style: italic; font-size: larger"
          ><b>ሀገርኛ AppStore</b></span
        >
      </a>

      <!-- Sidebar -->
      <%- include('includes/sidenav.ejs') %>
      <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row" style="margin-left: 5px">
              
        <div class="col-md-12">
            <!-- Widget: user widget style 1 -->
            <div class="card widget-user">
              <!-- Add the bg color to the header using any of the bg-* classes -->
              <div class="widget-user-header" 
                   style="background: url('/img/profileBack.jpg') center center;height: 240px;">
              </div>
              <div class="widget-user-image" style="margin-top: 100px;">
                <img class="img-circle elevation-2" src="/img/avatar.png" alt="User Avatar">
              </div>
              <div class="card-footer">
                <div style="align-content: center; margin-left: 45%;">
                <h3 class="widget-user-username"><%= profile.fullName %></h3>
                <h5 class="widget-user-desc" style="margin-left: 35px;"><%= profile.companyName %></h5>
                  <!-- /.col -->
                </div>
                <!-- /.row -->
              </div>
            </div>
            <div class="card" style="margin-left: 300px;margin-right: 300px;">
                <h5>Description</h5><hr>
                <p>More About AR Foundation here is Add the bg color to the header using any of the classes.
                     Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
            <!-- /.widget-user -->
          </div>
          <div class="col">
              <h5 class="row">Augmented Reality Apps By:</h5><hr>
         
          <div class="row">
     <% if(developerData.length > 0) { %> <% for(let allApps of
            developerData ) { %>
                  <div class="card" style="margin-right: 15px">
                <div class="card-header">
                  <img
                    src="<%= allApps.appIconURL %>"
                    width="212px"
                    height="212px"
                    alt="app logo"
                  />
                </div>
                <div class="card-body">
                  <p>App Name: <%= allApps.appName %></p>
                  <p>By: <%= allApps.developer.fullName %></p>
                  <div class="row" style="color: orange">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                  </div>
                </div>
              </div>
             <% } %><% } %>
          </div>
       </div>
            </div>
          </div>
        </div>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%- include('includes/footer.ejs') %>
  </div>
</body>
