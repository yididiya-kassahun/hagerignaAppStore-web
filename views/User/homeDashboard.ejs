<%-include('includes/head.ejs') %>

<body class="hold-transition sidebar-mini layout-fixed">
  <!-- Site wrapper -->
  <div class="wrapper">
    <!-- Navbar -->
    <%- include('includes/navbar.ejs') %>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar elevation-1">
      <a href="#" class="brand-link">
        <span
          class="brand-text font-weight-light"
          style="color: burlywood; font-style: italic; font-size: larger"
          ><b>ሀገርኛ AppStore</b></span
        >
      </a>

      <!-- Sidebar -->
      <%- include('includes/sidenav.ejs') %>
      <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>ሀገርኛ AppStore</h1>
            </div>
          </div>
        </div>
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row" style="margin-left: 5px">
            <% if(publishedApps.length > 0) { %> <% for(let publishedapp of
            publishedApps ) { %>
            <div class="card" style="margin-right: 15px">
              <div class="card-header">
                <img
                  src="<%= publishedapp.appIcon %>"
                  width="212px"
                  height="212px"
                  alt="app logo"
                />
              </div>
              <div class="card-body">
                <p>
                  <a
                    href="/appDetail/<%= publishedapp.appID %>"
                    style="color: black; text-decoration: none"
                    >App Name: <%= publishedapp.appName %></a
                  >
                </p>
                <a href="/developer.profile/<%= publishedapp.developer.id %>"
                  >By: <b></b><%= publishedapp.developer.fullName %></a
                >
                <div class="row" style="color: orange; margin-left: 5px">
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                </div>
              </div>
            </div>
            <% } %><% } %>
          </div>
        </div>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%- include('includes/footer.ejs') %>
  </div>
</body>
