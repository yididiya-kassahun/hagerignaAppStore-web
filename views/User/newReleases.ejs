<%-include('includes/head.ejs') %>

<body class="hold-transition sidebar-mini layout-fixed">
  <!-- Site wrapper -->
  <div class="wrapper">
    <!-- Navbar -->
    <%- include('includes/navbar.ejs') %>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar elevation-1">
      <a href="#" class="brand-link">
        <span class="brand-text font-weight-light">User</span>
      </a>

      <!-- Sidebar -->
      <%- include('includes/sidenav.ejs') %>
      <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h3>
                Recent Releasesed Apps in past <i class="fa fa-calendar"></i> 7
                days
              </h3>
            </div>
          </div>
        </div>
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row" style="margin-left: 5px">
            <% if(newReleaseList.length > 0) { %> <% for(let newRelease of
            newReleaseList ) { %> <% if(newRelease.createdAt > moment().subtract(20, "days").toDate()) {%>
            <div class="card" style="margin-right: 15px">
              <div class="card-header">
                <img
                  src="<%= newRelease.appIcon %>"
                  width="212px"
                  height="212px"
                  alt="app logo"
                />
              </div>
              <div class="card-body">
                <p>App Name: <%= newRelease.appName %></p>
                <p>By: <%= newRelease.developer.fullName %></p>
                <div class="row" style="color: orange">
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                </div>
              </div>
            </div>
            <% }else{%>
            <h4>no new released app!!!!!!!</h4>
            <% } %> <% } %><% } %>
          </div>
        </div>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%- include('includes/footer.ejs') %>
  </div>
</body>
